#!/usr/bin/env php
<?php

use Pantheon\Terminus\CI\CIApplication;

$root = dirname(realpath(__FILE__), 2);
include_once($root . '/vendor/autoload.php');




$app = new CIApplication();
$GLOBALS['APP'] = &$app;

try {
    $app->run();
} catch (Exception $e) {
    echo $e->getMessage() . PHP_EOL;
    exit(1);
}
